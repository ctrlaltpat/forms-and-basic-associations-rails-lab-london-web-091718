<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genres %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  <%= f.label :song_notes %>
  <% 3.times do |fml|%>
    <input name='song[note_contents][]' id="song_notes_<%=fml+1%>">
  <% end %>
  
  <br />

  <%= f.submit %>
<% end %>


